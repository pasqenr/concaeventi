{% extends "layouts/main.twig" %}

{% block bodyId %}modifica-evento{% endblock %}
{% block metaTitle %}Modifica evento{% endblock %}

{% block content %}
    {%- set thisYear = "now"|date('Y') %}

    <section class="section">
        <div class="container">
            <div class="columns">
                <div class="column"></div>
                <div class="column is-half">
                    <form action="{{ path_for('eventsEdit', {'id': evento.idEvento })|e('html_attr') }}" method="post">
                        <div class="field">
                            <label class="label">Identificatore</label>
                            <p class="control has-icons-left">
                                <input class="input" type="text" name="id" value="{{ evento.idEvento|e('html_attr') }}"
                                       readonly>
                                <span class="icon is-small is-left">
                                    <i class="fa fa-hashtag"></i>
                                </span>
                            </p>
                        </div>

                        <div class="field">
                            <label class="label">Titolo</label>
                            <p class="control has-icons-left">
                                <input class="input" type="text" name="titolo"
                                       value="{{ evento.titolo|e('html_attr') }}">
                                <span class="icon is-small is-left">
                                    <i class="fa fa-edit"></i>
                                </span>
                            </p>
                        </div>

                        <div class="field">
                            <label class="label">Descrizione</label>
                            <div class="control">
                                <textarea name="descrizione" class="textarea">{{ evento.descrizione|trim }}</textarea>
                            </div>
                        </div>

                        <div class="field">
                            <label class="label">Data e ora creazione</label>
                            <div class="columns">
                                <div class="column">
                                    <div class="columns">
                                        <div class="column">
                                            <div class="select">
                                                <select name="giornoCreazione" disabled>
                                                        <option value="{{ evento.istanteCreazione|date('d') }}">
                                                            {{ evento.istanteCreazione|date('d') }}
                                                        </option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="column">
                                            <div class="select">
                                                <select name="meseCreazione" disabled>
                                                    <option value="{{ evento.istanteCreazione|date('m') }}">
                                                        {{ evento.istanteCreazione|date('m') }}
                                                    </option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="column">
                                            <div class="select">
                                                <select name="annoCreazione" disabled>
                                                    <option value="{{ evento.istanteCreazione|date('Y') }}">
                                                        {{ evento.istanteCreazione|date('Y') }}
                                                    </option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="column"></div>

                                <div class="column">
                                    <div class="columns">
                                        <div class="column">
                                            <div class="select">
                                                <select name="oraCreazione" disabled>
                                                    <option value="{{ evento.istanteCreazione|date('H') }}">
                                                        {{ evento.istanteCreazione|date('H') }}
                                                    </option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="column">
                                            <div class="select">
                                                <select name="minutoCreazione" disabled>
                                                    <option value="{{ evento.istanteCreazione|date('i') }}">
                                                        {{ evento.istanteCreazione|date('i') }}
                                                    </option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="column">
                                            <div class="select">
                                                <select name="secondoCreazione" disabled>
                                                    <option value="{{ evento.istanteCreazione|date('s') }}">
                                                        {{ evento.istanteCreazione|date('s') }}
                                                    </option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="field">
                            <label class="label">Data e ora inizio</label>
                            <div class="columns">
                                <div class="column">
                                    <div class="columns">
                                        <div class="column">
                                            <div class="select">
                                                <select name="giornoInizio">
                                                    {% for i in range(1, 31) %}
                                                        <option value="{{ i }}"
                                                        {%- if i == evento.istanteInizio|date('d')  %}
                                                            selected
                                                        {%- endif %}
                                                        >
                                                            {{ i }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="column">
                                            <div class="select">
                                                <select name="meseInizio">
                                                    {% for i in range(1, 12) %}
                                                        <option value="{{ i }}"
                                                                {%- if i == evento.istanteInizio|date('m')  %}
                                                                    selected
                                                                {%- endif %}
                                                        >
                                                            {{ i }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="column">
                                            <div class="select">
                                                <select name="annoInizio">
                                                    {% for i in range(thisYear, thisYear+3) %}
                                                        <option value="{{ i }}"
                                                                {%- if i == evento.istanteInizio|date('Y')  %}
                                                                    selected
                                                                {%- endif %}
                                                        >
                                                            {{ i }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="column"></div>

                                <div class="column">
                                    <div class="columns">
                                        <div class="column">
                                            <div class="select">
                                                <select name="oraInizio">
                                                    {% for i in range(1, 24) %}
                                                        <option value="{{ i }}"
                                                                {%- if i == evento.istanteInizio|date('H')  %}
                                                                    selected
                                                                {%- endif %}
                                                        >
                                                            {{ i }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="column">
                                            <div class="select">
                                                <select name="minutoInizio">
                                                    {% for i in range(0, 59) %}
                                                        <option value="{{ i }}"
                                                                {%- if i == evento.istanteInizio|date('i')  %}
                                                                    selected
                                                                {%- endif %}
                                                        >
                                                            {{ i }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="field">
                            <label class="label">Data e ora fine</label>
                            <div class="columns">
                                <div class="column">
                                    <div class="columns">
                                        <div class="column">
                                            <div class="select">
                                                <select name="giornoFine">
                                                    {% for i in range(1, 31) %}
                                                        <option value="{{ i }}"
                                                                {%- if i == evento.istanteFine|date('d')  %}
                                                                    selected
                                                                {%- endif %}
                                                        >
                                                            {{ i }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="column">
                                            <div class="select">
                                                <select name="meseFine">
                                                    {% for i in range(1, 12) %}
                                                        <option value="{{ i }}"
                                                                {%- if i == evento.istanteFine|date('m')  %}
                                                                    selected
                                                                {%- endif %}
                                                        >
                                                            {{ i }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="column">
                                            <div class="select">
                                                <select name="annoFine">
                                                    {% for i in range(thisYear, thisYear+3) %}
                                                        <option value="{{ i }}"
                                                                {%- if i == evento.istanteFine|date('Y')  %}
                                                                    selected
                                                                {%- endif %}
                                                        >
                                                            {{ i }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="column"></div>

                                <div class="column">
                                    <div class="columns">
                                        <div class="column">
                                            <div class="select">
                                                <select name="oraFine">
                                                    {% for i in range(1, 24) %}
                                                        <option value="{{ i }}"
                                                                {%- if i == evento.istanteFine|date('H')  %}
                                                                    selected
                                                                {%- endif %}
                                                        >
                                                            {{ i }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="column">
                                            <div class="select">
                                                <select name="minutoFine">
                                                    {% for i in range(0, 59) %}
                                                        <option value="{{ i }}"
                                                                {%- if i == evento.istanteFine|date('i')  %}
                                                                    selected
                                                                {%- endif %}
                                                        >
                                                            {{ i }}
                                                        </option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="field">
                            <p>
                                <strong>Scritto da:</strong> {{ evento.nomeUtente }} {{  evento.cognomeUtente }}
                                ({{ evento.ruolo }}, #{{ evento.idUtente }})
                            </p>
                        </div>

                        {% if associazioni|length > 0 %}
                        <div class="select is-multiple">
                            <label class="label">Associazioni</label>
                            <select multiple size="5" name="associazioni[]">
                                {% for ass in associazioni %}
                                    <option value="{{ ass.idAssociazione }}"
                                        {% for assId in associazioniEvento %}
                                            {% if assId == ass.idAssociazione %}
                                                selected
                                            {% endif %}
                                        {% endfor %}
                                    >
                                        {{ ass.nomeAssociazione }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        {% endif %}

                        <div class="is-small">&nbsp;</div>

                        {% if associazioni|length > 0 %}
                        <label class="label">Associazione primaria</label>
                        <div class="select">
                            <select name="assPrimaria">
                                {% for ass in associazioni %}
                                    <option value="{{ ass.idAssociazione }}"
                                            {% if ass.idAssociazione == evento.idAssPrimaria %}
                                                selected
                                            {% endif %}
                                    >
                                        {{ ass.nomeAssociazione }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="is-small">&nbsp;</div>
                        {% endif %}

                        {% if utente.ruolo == 'Amministratore' or
                        utente.ruolo == 'Direttore' or utente.ruolo == 'Publisher' %}
                            <div class="field">
                                <div class="control">
                                    <label class="checkbox">
                                        <input type="checkbox" name="revisionato"
                                                {% if evento.revisionato == 1 %}
                                                    checked
                                                {% endif %}
                                        >
                                        Approvato
                                    </label>
                                </div>
                            </div>
                        {% endif %}

                        <div class="is-small">&nbsp;</div>

                        <div class="field is-grouped">
                            <div class="control">
                                <button class="button is-primary">Modifica</button>
                            </div>
                            <div class="control">
                                <p class="button is-light" onclick="goBack();">Annulla</p>
                            </div>
                        </div>

                        <input type="hidden" name="_method" value="UPDATE">
                        <input type="hidden" name="{{csrf.keys.name}}" value="{{csrf.name}}">
                        <input type="hidden" name="{{csrf.keys.value}}" value="{{csrf.value}}">
                    </form>
                </div>
                <div class="column"></div>
            </div>
        </div>
    </section>
{% endblock %}